<%- include("partials/header"); -%>
  <div class="right">
    <form id="currentPost" class="currentPost" data-post="<%=JSON.stringify(post)%>">
      <% createdDate = post.createdAt.toLocaleString('en-us',Â {second: 'numeric', minute: 'numeric', hour: 'numeric', weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
      <h1><%=post.title%></h1>
      <p><%= createdDate %></p>
      <textarea readonly rows="15" cols="100" wrap="hard" class="post-textarea"><%=post.content%></textarea><br>
      <% if (locals.user) { %>
        <button type="submit" id="editBtn" class="btn btn-primary">Edit</button>
        <button type="submit" id="removeBtn" class="btn btn-primary">Remove</button>
      <% } else { %>
      <button type="submit" id="editBtn" class="btn btn-primary" disabled>Edit</button>
      <button type="submit" id="removeBtn" class="btn btn-primary" disabled>Remove</button>
      <% } %>
    </form>
  </div>
